@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model aspnet2.Models.RegisterView

@using (Html.BeginForm("Register", "Register", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>@Html.ValidationMessageFor(m => m.Email) @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })</div>

    <div>@Html.ValidationMessageFor(m => m.Password) @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @type = "Password" })</div>

    <div>@Html.ValidationMessageFor(m => m.ConfirmPassword) @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "ConfirmPassword", @type = "Password" })</div>

    <input type="submit" value="Register" />
}